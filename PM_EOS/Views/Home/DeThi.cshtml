<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/File_rieng/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/File_rieng/css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/File_rieng/css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="~/File_rieng/css/style.css">

    <title>Login #9</title>
</head>
<body>



    <div class="content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 order-md-2">
                    <img src="~/File_rieng/images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <div class="form-block">
                                <div class="mb-4">
                                    <h3 style="text-align: center;">Phần mềm thi Online <i class="fab fa-uncharted fa-1x fa-spin"></i><strong>EOS</strong><i class="fab fa-uncharted fa-1x fa-spin"></i></h3>
                                    <p style="text-align: center;color:red">Danh Sách Đề Thi </p>
                                </div>
                                <table style="margin-left:50px">
                                    <tr>
                                        <td style="padding-left:40px">Tên đề thi</td>
                                        <td style="padding-left:30px">Trang thái </td>
                                    </tr>


                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><p style="text-align:center; padding-top:17px;padding-left:7px; color:black">@item.dethis.TenDeThi</p></td>
                                            <td>
                                                @if (item.dethis.TrangThai == "Lock")
                                                {
                                                    <p>Đang Khóa ! Đợi giáo viên Mở đề thi</p>
                                                }
                                                @if (item.dethis.TrangThai == "UnLock")
                                                {
                                                    <a href="/Home/GiaoDienTrangThi?idde=@item.dethis.IddeThi&Monthi=@item.monhocdethis.MonHocId" style="padding-left:40px">Vào thi</a>
                                                }
                                            </td>
                                        </tr>

                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/1c24510dbf.js" crossorigin="anonymous"></script>
    <script src="~/File_rieng/js/jquery-3.3.1.min.js"></script>
    <script src="~/File_rieng/js/popper.min.js"></script>
    <script src="~/File_rieng/js/bootstrap.min.js"></script>
    <script src="~/File_rieng/js/main.js"></script>
</body>
</html>
